{
  "name": "chatflow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='(components|lib)'",
    "test:api": "jest --testPathPattern='api'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:check": "powershell -ExecutionPolicy Bypass -File scripts/check-server.ps1 && playwright test",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:ci": "jest --ci --coverage --maxWorkers=2 && playwright test",
    "test:install-playwright": "playwright install",
    "test:full": "npm run test:coverage && npm run test:e2e",
    "test:full-with-lint": "npm run lint && npm run test:coverage && npm run test:e2e"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.0.0",
    "ai": "^3.4.0",
    "better-sqlite3": "^11.0.0",
    "next": "^16.0.0",
    "openai": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5",
    "undici": "^6.22.0"
  },
  "overrides": {
    "@ai-sdk/provider": "^1.1.3"
  }
}
