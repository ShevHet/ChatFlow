{
  "name": "chatflow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bunx next dev --webpack",
    "build": "bunx next build",
    "start": "bunx next start",
    "test": "bunx jest",
    "test:watch": "bunx jest --watch",
    "test:coverage": "bunx jest --coverage",
    "test:unit": "bunx jest --testPathPattern=\"components|lib\"",
    "test:api": "bunx jest --testPathPattern=api",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:check": "powershell -ExecutionPolicy Bypass -File scripts/check-server.ps1 && bunx playwright test",
    "test:all": "bun run test:coverage && bun run test:e2e",
    "test:ci": "bunx jest --ci --coverage --maxWorkers=2 && bunx playwright test",
    "test:install-playwright": "bunx playwright install",
    "test:full": "bun run test:coverage && bun run test:e2e",
    "test:full-with-lint": "bun run lint && bun run test:coverage && bun run test:e2e",
    "test:full-script": "powershell -ExecutionPolicy Bypass -File scripts/run-full-test.ps1",
    "migrate": "bunx tsx scripts/migrate.ts migrate",
    "migrate:status": "bunx tsx scripts/migrate.ts status",
    "migrate:rollback": "bunx tsx scripts/migrate.ts rollback",
    "clean": "powershell -ExecutionPolicy Bypass -File scripts/clean-next.ps1",
    "dev:clean": "bun run clean && bun run dev",
    "create-test-excel": "bun scripts/create-test-excel.js",
    "test:excel-api": "bun scripts/test-excel-api.js",
    "test:new-features": "powershell -ExecutionPolicy Bypass -File scripts/test-new-features.ps1",
    "test:new-features:bash": "bash scripts/test-new-features.sh"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.0",
    "ai": "^3.4.0",
    "better-sqlite3": "^9.6.0",
    "next": "^16.0.0",
    "openai": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "bun-types": "latest",
    "autoprefixer": "^10.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5",
    "undici": "^6.22.0",
    "dotenv": "^16.4.5"
  },
  "overrides": {
    "@ai-sdk/provider": "^1.1.3"
  }
}
