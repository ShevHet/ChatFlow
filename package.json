{
  "name": "chatflow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='(components|lib)'",
    "test:api": "jest --testPathPattern='api'",
    "test:performance": "jest --testPathPattern='performance'",
    "test:security": "jest --testPathPattern='security'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "set PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0 && playwright test --ui",
    "test:e2e:check": "powershell -ExecutionPolicy Bypass -File scripts/check-server.ps1 && playwright test",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:ci": "jest --ci --coverage --maxWorkers=2 && playwright test",
    "test:install-playwright": "playwright install",
    "test:full": "npm run test:coverage && npm run test:e2e",
    "test:full-with-lint": "npm run lint && npm run test:coverage && npm run test:e2e",
    "init-db": "bun run scripts/init-db.ts",
    "stop": "powershell -ExecutionPolicy Bypass -File scripts/stop-nextjs.ps1",
    "test-openai": "bun run scripts/test-openai.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.24",
    "@tailwindcss/forms": "^0.5.7",
    "@types/xlsx": "^0.0.35",
    "ai": "^3.4.33",
    "better-sqlite3": "^11.0.0",
    "next": "^16.0.0",
    "openai": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/better-sqlite3": "^7.6.11",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5",
    "undici": "^6.22.0"
  }
}
